{
  "name": "vscode-color-pick",
  "displayName": "Color Pick",
  "description": "Open a color picker from any file. Works in JSX. Supports hex or rgba. No dependencies.",
  "icon": "pick.png",
  "version": "0.7.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "publisher": "adam-watters",
  "author": {
    "email": "adamwatters11@gmail.com",
    "name": "Adam Watters"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamwatters/vscode-color-pick"
  },
  "main": "./build/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pick-color",
        "title": "Pick Color"
      }
    ]
  },
  "license": "MIT",
  "dependencies": {
    "color-convert": "^2.0.0",
    "color-name-list": "^10.0.0",
    "fuse.js": "^7.0.0",
    "react": "^18.3.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.0"
  },
  "scripts": {
    "build": "vite build && esbuild ext-src/extension.ts --bundle --outfile=build/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:webview": "vite build",
    "build:extension": "esbuild ext-src/extension.ts --bundle --outfile=build/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "vscode:prepublish": "yarn build",
    "dev:webview": "vite",
    "lint": "eslint src ext-src"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-color": "^3.0.0",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.85.0",
    "@types/color-convert": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0"
  }
}
